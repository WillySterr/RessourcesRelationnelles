                {% if new.video is not null %}

<div class="card w-75  my-5">
  <div class="card-header">
      <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="rounded-circle avatar a" style="width: 10%" alt="user profile image">
    <p class="a ml-2"><a href="#">{{ new.video.user.firstName }} {{ new.video.user.lastName }}, {{ new.video.user.job}} </a></p>
        <div class="favoris a">
                             {% if new.favoris != [] %}
                       <a href="{{ path('add_favoris', {'id': new.id}) }}"><i class="far fa-star fa-lg ml-5"></i></a>
                       
                     {% endif %}
                    {% for favoris in new.favoris %}
                            {% if favoris.user == userCo %}
                        <a href="{{ path('remove_favoris', {'id': favoris.id}) }}"><i class="fas fa-star fa-lg ml-5"></i></a>
                            {% endif %}
                        {% endfor %}
    </div>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{ new.video.titre }}</h5>
         <p>{{ new.video.description }}</p>
    <div class="card-text text-center">
            <div class="embed-responsive embed-responsive-16by9">
                 <video class="embed-responsive-item" controls><source src="{{ asset('/uploads/'~new.video.video) }}" type="video/mp4"></video>
            </div>
            <div class="post-description">
           
