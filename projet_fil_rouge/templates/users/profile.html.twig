{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}
{% block title %}Profile page{% endblock %}
{% block body %}
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ user.firstName }} {{ user.lastName }}</h4>
                                    <p class="text-secondary mb-1">{{ user.job }}</p>
                                    <p class="text-muted font-size-sm">{{ user.age }} ans</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">

                        <ul class="list-group list-group-flush">

                            <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                <h6 class="mb-0 text-center">Dernières ressources publiées</h6>
                            </li>

                            {% for ressource in lastRessources %}

                                {% if ressource.photo is not null %}

                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><i class="mr-1 fas fa-camera"></i>Photo</h6>
                                        <a href="{{ path('photos_show', {'id': ressource.photo.id}) }}" class="text-secondary">{{ ressource.photo.titre }}</a>
                                    </li>

                                {% elseif ressource.video is not null %}
                                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                      <h6 class="mb-0"><i class="mr-1 fas fa-camera"></i>Vidéo</h6>
                                      <a href="{{ path('videos_show', {'id': ressource.video.id}) }}" class="text-secondary">{{ ressource.video.titre }}</a>
                                  </li>

                                {% elseif ressource.article is not null %}

                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><i class="mr-1 fas fa-file"></i>Article</h6>
                                        <a href="{{ path('articles_show', {'id': ressource.article.id}) }}" class="text-secondary">{{ ressource.article.titre }}</a>
                                    </li>

                                {% elseif ressource.information is not null %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><i class="mr-1 fas fa-info-circle"></i>Information</h6>
                                        <a href="{{ path('informations_show', {'id': ressource.information.id}) }}" class="text-secondary">{{ ressource.information.titre }}</a>
                                    </li>

                                {% elseif ressource.evenement is not null %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><i class="mr-1 fas fa-calendar"></i>Évènement</h6>
                                        <a href="{{ path('evenements_show', {'id': ressource.evenement.id}) }}" class="text-secondary">{{ ressource.evenement.titre }}</a>
                                    </li>

                                {% endif %}

                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card" style="height: 302px;">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.mail }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Téléphone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{user.phone}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.description }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Profession</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.job }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Âge</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.age }} ans
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div class="card mt-3" style="width: 350px; height: 288px;">

                                <ul class="list-group list-group-flush">

                                    <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                        <h6 class="mb-0 text-center">Dernières ressources favorites</h6>
                                    </li>

                                    {% for fav in favs %}

                                        {% if fav.ressource.photo is not null %}

                                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0"><i class="fas fa-star mr-1" style="color: #777;"></i>Photo</h6>
                                                <a href="{{ path('photos_show', {'id': fav.ressource.photo.slug}) }}" class="text-secondary">{{ fav.ressource.photo.titre }}</a>
                                            </li>

                                        {% elseif fav.ressource.video is not null %}
                                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0"><i class="fas fa-star mr-1" style="color: #777;"></i>Vidéo</h6>
                                                <a href="{{ path('videos_show', {'slug': fav.ressource.video.slug}) }}" class="text-secondary">{{ fav.ressource.video.titre }}</a>
                                            </li>

                                        {% elseif fav.ressource.article is not null %}

                                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0"><i class="fas fa-star mr-1" style="color: #777;"></i>Article</h6>
                                                <a href="{{ path('articles_show', {'id': fav.ressource.article.id}) }}" class="text-secondary">{{ fav.ressource.article.titre }}</a>
                                            </li>

                                        {% elseif fav.ressource.information is not null %}
                                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0"><i class="fas fa-star mr-1" style="color: #777;"></i>Information</h6>
                                                <a href="{{ path('informations_show', {'slug': fav.ressource.information.slug}) }}" class="text-secondary">{{ fav.ressource.information.titre }}</a>
                                            </li>

                                        {% elseif fav.ressource.evenement is not null %}
                                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0"><i class="fas fa-star mr-1" style="color: #777;"></i>Évènement</h6>
                                                <a href="{{ path('evenements_show', {'id': fav.ressource.evenement.slug}) }}" class="text-secondary">{{ fav.ressource.evenement.titre }}</a>
                                            </li>

                                        {% endif %}
                                    {% endfor %}

                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card mt-3" style="width: 350px; height: 288px;">

                                <ul class="list-group list-group-flush">

                                    <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                        <h6 class="mb-0 text-center">Actions</h6>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">

                                    </li>

                                </ul>

                                <a class="btn btn-primary" href="{{ path('app_check_email') }}">Modifier mot de passe</a>
                                <a class="btn btn-warning" href="{{ path('edituser', {'id' : user.id}) }}">Modifier informations</a>
                                <a class="btn btn-danger" href="{{ path('userandco_delete', {'id': user.id}) }}">Supprimer utilisateur</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}