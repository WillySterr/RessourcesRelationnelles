{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}

    <div class="global-container">
        <div class="card" style="width: 600px; margin: 20px;">
            <div class="card-body">
                <h3 class="card-title text-center">Inscription</h3>
                <div class="card-text">

    {{ form_start(form) }}

                    <div class="form-group col-12">
                        <label for="InputEmail">Email</label>
                        {{ form_widget(form.mail, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputEmail"
                            }
                        }) }}
                    </div>
                    <div class="d-flex">
                    <div class="form-group col-6">
                        <label for="InputPassword">Mot de passe</label>
                        {{ form_widget(form.password, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputPassword"
                            }
                        }) }}
                    </div>
                    <div class="form-group col-6">
                        <label for="InputPasswordVerification">Vérification mot de passe</label>
                        {{ form_widget(form.passwordVerification, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputPasswordVerification"
                            }
                        }) }}
                    </div>
                    </div>
                    <div class="d-flex">
                    <div class="form-group col-6">
                        <label for="InputLastName">Nom</label>
                        {{ form_widget(form.lastName, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputLastName"
                            }
                        }) }}
                    </div>
                    <div class="form-group col-6">
                        <label for="InputFirstName">Prénom</label>
                        {{ form_widget(form.firstName, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputFirstName"
                            }
                        }) }}
                    </div>
                    </div>
                    <div class="d-flex">
                        <div class="form-group col-6">
                        <label for="InputAge">Âge</label>
                        {{ form_widget(form.age, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputAge"
                            }
                        }) }}
                    </div>

                    <div class="form-group col-6">
                        <label for="InputPhone">Téléphone</label>
                        {{ form_widget(form.phone, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputPhone"
                            }
                        }) }}
                    </div>
                    </div>
                    <div class="form-group col-12">
                        <label for="InputDescription">Description</label>
                        {{ form_widget(form.description, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputDescription"
                            }
                        }) }}
                    </div>
                    <div class="form-group col-12">
                        <label for="InputJob">Profession</label>
                        {{ form_widget(form.job, {
                            "attr": {
                                "class": "form-control form-control-sm",
                                "id": "InputJob"
                            }
                        }) }}
                    </div>
                    <div class="form-group col-12">
                        <button type="submit" style="background-color: #1b2838 !important;" class="btn btn-primary btn-block">Inscription</button>
                    </div>
                    <div class="sign-up">
                        Vous avez déjà un compte? <a style="color: #1b2838 !important;" href="{{ path('login') }}">Connectez-vous</a>
                    </div>
    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}