{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="global-container">
    <div class="card" style="width: 600px; margin: 20px;">
    <div class="card-body">
    <h3 class="card-title text-center">Mot de passe oublié</h3>
    <div class="card-text">
    {{ form_start(requestForm) }}
    <div class="form-group col-12">
        <label for="InputEmail">Email</label>
        {{ form_widget(requestForm.mail, {
            "attr": {
                "class": "form-control form-control-sm",
                "id": "InputEmail"
            }
        }) }}
    </div>
        <div class="form-group col-12 text-center">
            <small>
                Entrez votre adresse mail et nous vous enverrons
                un lien pour <br> réinitialiser votre mot de passe.
            </small>
        </div>

        <div class="form-group col-12">
        <button class="btn btn-primary btn-block">Envoyer</button>
        </div>

        {{ form_end(requestForm) }}

    </div>
    </div>
    </div>
    </div>
{% endblock %}