{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}


<div class="global-container">
    <div class="card" style="width: 600px; margin: 20px;">
        <div class="card-body">
            <h3 class="card-title text-center">RÃ©initialiser votre mot de passe</h3>
            <div class="card-text">
    {{ form_start(resetForm) }}
                <div class="form-group col-12">
                    <label for="InputPassword1">Mot de passe</label>
                    {{ form_widget(resetForm.plainPassword.first, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputPassword1"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
                    <label for="InputPassword2">Verification mot de passe</label>
                    {{ form_widget(resetForm.plainPassword.second, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputPassword2"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <button class="btn btn-primary btn-block">Modifier</button>
                </div>
    {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
