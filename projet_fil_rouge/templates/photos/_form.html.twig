{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{{ form_start(form) }}
<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center text-nowrap">{{ title_label|default('') }} Photo</h3>
            <div class="card-text">


                <div class="form-group col-12">
                    <label for="InputName">Titre</label>
                    {{ form_widget(form.titre, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputName"
                        }
                    }) }}
                </div>


                <div class="form-group col-12">
                    <label for="InputDescription">Description</label>
                    {{ form_widget(form.description, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputDescription"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
                    <label for="InputSlug">Slug</label>
                    {{ form_widget(form.slug, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputSlug"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
                    <label for="InputCategory">Cat√©gorie</label>
                    {{ form_widget(form.category, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputCategory"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
                    <label for="InputImage">Image</label>
                    {{ form_widget(form.image, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputImage"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
    <button class="btn btn-primary btn-block"><i class="fa fa-plus-square"></i> Ajouter</button>
                </div>

                <div class="form-group col-12">
                <div class="sign-up text-left">
                     <a href="{{ path('photos_index') }}"><i class="fa fa-reply"></i> Retour</a>
                </div>
                </div>




{{ form_end(form) }}


            </div>
        </div>
    </div>
</div>
