{% extends 'base.html.twig' %}

{% block title %}Modifier photos{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
{% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    {% if app.user.id is same as (photo.user.id) %}
        <a class="btn btn-indigo" href="{{ path('photos_index') }}">Retour</a>

   <div class="container my-5 px-0 text-center">

    {{ include('photos/_form.html.twig', {'button_label': 'Ã‰diter'}) }}

    {{ include('photos/_delete_form.html.twig') }}
</div>
    {% else %}

        <script>window.location.href = "{{path('news_feed')}}" </script>

    {% endif %}
    <script>
        let btnDelete = document.querySelector('#btn-delete-form');

        if(document.body.clientWidth < 769){
            btnDelete.classList.add('w-100');
        }
        else{
            btnDelete.classList.remove('w-100');
        }


        window.addEventListener('resize', function(){

            if(document.body.clientWidth < 769){
                btnDelete.classList.add('w-100');
            }
            else{
                btnDelete.classList.remove('w-100');
            }
        })

    </script>
{% endblock %}

