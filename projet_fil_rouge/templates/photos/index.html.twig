{% extends 'base.html.twig' %}

{% block title %}Photos index{% endblock %}

{% block body %}
    <h1>Photos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Published</th>
                <th>Slug</th>
                <th>Titre</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.published ? 'Yes' : 'No' }}</td>
                <td>{{ photo.slug }}</td>
                <td>{{ photo.titre }}</td>
                <td>{{ photo.description }}</td>
                <td>{% if photo.updatedAt != null %}
                    {{ photo.updatedAt|date('Y-m-d H:i:s')  }}
                {% else %}
                    {{ photo.createdAt|date('Y-m-d H:i:s')  }}
                {% endif %}</td>
                <td><img src="{{ asset('/uploads/'~photo.image) }}" alt="ancienne image" width="150"></td>
                <td>
                    <a href="{{ path('photos_show', {'id': photo.id}) }}">show</a>
                    <a href="{{ path('photos_edit', {'id': photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('photos_new') }}">Create new</a>
{% endblock %}
