{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
             <div class="container my-5">
  <!--Section: Content-->
  <section class="categoryList">
    <!-- Section heading -->
    <h3 class="text-center font-weight-bold my-5">Ma liste de catégorie</h3>
    <a class="btn btn-primary mb-5 " href="{{ path('category_new') }}"><i class="fas fa-plus"></i></a>
  	<div class="row">

        {% for category in categories %}

 
      <!--Grid column-->
      <div class="col-md-4 mb-4">
        <!--Card-->
        <div class="card">
          <!--Card content-->
          <div class="card-body">
            <!--Title-->
            <h4 class="card-title"><strong>{{ category.name }}</strong></h4>
            <hr>
            <!--Text-->
            <p class="card-text mb-3"> {{ category.description }}
            </p>
                    <a class="btn btn-sm btn-success mb-0" href="{{ path('category_show', {'id': category.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-sm btn-warning mb-0" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-pen"></i></a>
                    <a class="btn btn-sm btn-danger mb-0" href="{{ path('category_delete', {'id': category.id}) }}"><i class="fas fa-trash-alt"></i></a>
          </div>
          <!--/.Card content-->

        </div>
        <!--/.Card-->

      </div>
 {% endfor %}
      <!--Grid column-->
</div>
  </section>
  <!--Section: Content-->



             </div>
{% endblock %}
