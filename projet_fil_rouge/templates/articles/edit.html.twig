{% block title %}Editer Articles{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
{% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

    {% if app.user.id is same as (article.user.id) %}


    <a class="btn btn-primary" href="{{ path('articles_index') }}">Retour</a>
<div class="global-container">
<div>
        <div>
                <h6>Ancienne image</h6>
            <img src="{{ asset('/images/vichFiles/'~article.photo) }}" alt="ancienne image" width="400">
        </div>
        <div class="mt-2">
         <h6>Ancienne vid√©o</h6>
            <video controls width="400"><source src="{{ asset('/images/vichFiles/'~article.video) }}" type="video/mp4"></video>
        </div>


    </div>
    {{ include('articles/_form.html.twig', {'button_label': 'Update'}) }}
</div>

    {{ include('articles/_delete_form.html.twig') }}
    {% else %}

