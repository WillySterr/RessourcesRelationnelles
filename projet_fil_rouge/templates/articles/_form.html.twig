{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">

    <style>
        .articles_category{
            border: none !important;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }
        [type="checkbox"]:not(:checked), [type="checkbox"]:checked {
            position: relative !important;
            pointer-events: visible !important;
            opacity: 1 !important;
        }
        .articles_category *{
            align-self: center;
        }

        .articles_category label{
            margin: 0 10px;
        }
        #articles_photo{
            border: none !important;
        }
        #articles_video{
            border: none !important;
        }

    </style>
{% endblock %}

{{ form_start(form) }}
<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <div class="card-text">


                <div class="form-group col-12">
                    <label for="InputTitre">Titre</label>
                    {{ form_widget(form.titre, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputTitre"
                        }
                    }) }}
                </div>


                <div class="form-group col-12">
                    <label for="InputDescription">Description</label>
                    {{ form_widget(form.description, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputDescription"
                        }
                    }) }}
                </div>


                <div class="form-group col-12">
                    <label for="InputCategorie">Catégorie</label>
                    {{ form_widget(form.category, {
                        "attr": {
                            "class": "form-control form-control-sm articles_category",
                            "id": "InputCategorie"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <label for="InputPhoto">Photo</label>
                    {{ form_widget(form.photo, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputPhoto"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <label for="InputVideo">Vidéo</label>
                    {{ form_widget(form.video, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputVideo"
                        }
                    }) }}
                </div>
        
                <div class="form-group col-12">
    <button class="btn btn-primary btn-block"><i class="fa fa-plus-square"></i> Ajouter</button>
                </div>

                <div class="form-group col-12">
                <div class="sign-up text-left">
                     <a style="color: #777;" href="{{ path('category_index') }}"><i class="fa fa-reply"></i> Retour</a>
                </div>
                </div>


</div>

{{ form_end(form) }}


            </div>
        </div>
    </div>
