{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
{% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    {% if app.user %}
    <a class="btn btn-primary" href="{{ path('articles_index') }}">Retour</a>

    {{ include('articles/_form.html.twig') }}
    {% else %}
        <script>window.location.href = "{{path('login')}}" </script>
    {% endif %}

{% endblock %}
