{% extends 'base.html.twig' %}

{% block title %}Liste des informations{% endblock %}

{% block body %}
    <h1>Toutes les informations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Publié</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information in informations %}
            <tr>
                <td>{% if information.updatedAt != null %}
                    {{ information.updatedAt|date('d-m-Y')  }}
                {% else %}
                    {{ information.createdAt|date('d-m-Y')  }}
                {% endif %}
                </td>
                <td>{{ information.published ? 'Yes' : 'No' }}</td>

                <td>{{ information.titre }}</td>
                <td>{{ information.description }}</td>
                <td>{{ information.contenu }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('informations_show', {'slug': information.slug}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('informations_edit', {'slug': information.slug}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun Résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('informations_new') }}">Ajouter une information</a>
{% endblock %}
