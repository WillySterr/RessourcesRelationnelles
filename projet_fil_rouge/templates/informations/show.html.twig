{% extends 'base.html.twig' %}

{% block title %}Informations{% endblock %}

{% block body %}
    <h1>Informations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ information.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ information.date ? information.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ information.heure ? information.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ information.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ information.slug }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ information.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ information.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ information.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('informations_index') }}">back to list</a>

    <a href="{{ path('informations_edit', {'id': information.id}) }}">edit</a>

    {{ include('informations/_delete_form.html.twig') }}
{% endblock %}
