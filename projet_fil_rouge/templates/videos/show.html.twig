{% extends 'base.html.twig' %}

{% block title %}Videos{% endblock %}

{% block body %}
    <h1>Videos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ video.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ video.slug }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ video.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ video.updatedAt ? video.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ video.video }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('videos_index') }}">back to list</a>

    <a href="{{ path('videos_edit', {'id': video.id}) }}">edit</a>

    {{ include('videos/_delete_form.html.twig') }}
{% endblock %}
