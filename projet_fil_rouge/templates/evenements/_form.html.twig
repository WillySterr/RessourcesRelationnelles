{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <style>
        .evenements_category{
            border: none !important;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }
        [type="checkbox"]:not(:checked), [type="checkbox"]:checked {
            position: relative !important;
            pointer-events: visible !important;
            opacity: 1 !important;
        }
        .evenements_category *{
            align-self: center;
        }

        .evenements_category label{
            margin: 0 10px;
        }

    </style>
{% endblock %}

{{ form_start(form) }}
<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <div class="card-text">


                <div class="form-group col-12">
                    <label for="InputTitre">Titre</label>
                    {{ form_widget(form.titre, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputTitre"
                        }
                    }) }}
                </div>


                <div class="form-group col-12">
                    <label for="InputDescription">Description</label>
                    {{ form_widget(form.description, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputDescription"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <label for="InputDateDebut">Date début</label>
                    {{ form_widget(form.dateDebut, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputDateDebut"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <label for="InputDateFin">Date fin</label>
                    {{ form_widget(form.dateFin, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputDateFin"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
                    <label for="InputheureDebut">Heure début</label>
                    {{ form_widget(form.heureDebut, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputheureDebut"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <label for="InputHeureFin">Heure fin</label>
                    {{ form_widget(form.heureFin, {
                        "attr": {
                            "class": "form-control form-control-sm",
                            "id": "InputHeureFin"
                        }
                    }) }}
                </div>
                <div class="form-group col-12">
                    <label for="InputCategorie">Catégorie</label>
                    {{ form_widget(form.category, {
                        "attr": {
                            "class": "form-control form-control-sm evenements_category",
                            "id": "InputCategorie"
                        }
                    }) }}
                </div>

                <div class="form-group col-12">
    <button class="btn btn-primary btn-block"><i class="fa fa-plus-square"></i> Ajouter</button>
                </div>

                <div class="form-group col-12">
                <div class="sign-up text-left">
                     <a style="color: #777;" href="{{ path('category_index') }}"><i class="fa fa-reply"></i> Retour</a>
                </div>
                </div>




{{ form_end(form) }}


            </div>
        </div>
    </div>
</div>
