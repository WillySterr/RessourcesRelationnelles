{% extends 'base.html.twig' %}

{% block title %}Modifier l'événement{% endblock %}

{% block body %}
    {% if app.user.id is same as (evenement.user.id) %}
    <a class="btn btn-sm btn-primary" href="{{ path('evenements_index') }}">Retour</a>

   <div class="container">

    {{ include('evenements/_form.html.twig', {'button_label': 'Éditer'}) }}
        
</div>
{{ include('evenements/_delete_form.html.twig') }}
    {% else %}

        <script>window.location.href = "{{path('news_feed')}}" </script>

    {% endif %}

    <script>
        let btnDelete = document.querySelector('#btn-delete-form');

        if(document.body.clientWidth < 769){
            btnDelete.classList.add('w-100');
        }
        else{
            btnDelete.classList.remove('w-100');
        }


        window.addEventListener('resize', function(){

            if(document.body.clientWidth < 769){
                btnDelete.classList.add('w-100');
            }
            else{
                btnDelete.classList.remove('w-100');
            }
        })

    </script>

{% endblock %}

