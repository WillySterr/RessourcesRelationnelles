{% extends 'base.html.twig' %}

{% block title %}evenement{% endblock %}

{% block body %}


 
    <!--Section: Content-->
    <section class="px-md-5 my-5 mx-md-5 dark-grey-text text-center text-lg-left">

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-lg-6 mb-4 mb-lg-0">

          <h3 class="font-weight-bold"> Titre de l'info : {{ evenement.titre}}</h3>

          <p class="font-weight-bold">Crée le {% if evenement.updatedAt != null %}
                    {{ evenement.updatedAt|date('d-m-Y')  }}
                {% else %}
                    {{ evenement.createdAt|date('d-m-Y')  }}
                {% endif %}</p>

            <p class="font-small font-weight-bold dark-grey-text mb-1"><i class="fas fa-clock"></i>
            Du {{ evenement.dateDebut|date('d-m-Y') }} au {{ evenement.dateFin|date('d-m-Y') }}
            </p>
            <p class="font-small font-weight-bold dark-grey-text mb-1"><i class="fas fa-clock"></i>
            De   {{ evenement.heureDebut|date('H:i:s') }} à {{ evenement.heureFin|date('H:i:s') }}
            </p>
          <div class="d-flex">
          <a class="btn btn-indigo" href="{{ path('evenements_index') }}">Retour</a><br/>
          <a class="btn btn-deep-orange" href="{{ path('evenements_edit', {'id': evenement.id}) }}">Modifier</a>
          {{ include('evenements/_delete_form.html.twig') }}
          </div>

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->


    </section>
    <!--Section: Content-->
{% endblock %}
